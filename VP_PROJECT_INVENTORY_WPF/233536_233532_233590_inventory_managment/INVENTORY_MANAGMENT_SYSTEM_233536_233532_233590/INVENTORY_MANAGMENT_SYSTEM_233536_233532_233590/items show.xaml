<Window x:Class="INVENTORY_MANAGMENT_SYSTEM_233536_233532_233590.items_show"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INVENTORY_MANAGMENT_SYSTEM_233536_233532_233590"
        mc:Ignorable="d"
        Title="Items Show" Height="450" Width="800">
    <Grid>
        <!-- DataGrid to display items -->
        <DataGrid x:Name="ItemsDataGrid" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10" SelectionMode="Single" />

        <!-- Button to add selected item to the cart -->
        <Button Content="Add to Cart" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" Width="100" Height="30" Click="AddToCartButton_Click" />
    </Grid>
</Window>
